/*
  Here you can customize app styles for stylus framework in a global way
*/

@import './app'
body
  color:$black-l-18
.form-control
    -webkit-box-shadow : inset 0 1px 1px $black
    background-color   : $white
    border             : 1px solid #ccc
    box-shadow         : inset 0 1px 1px $black
    font-size          : $rem-font-size2
    &:focus
      border-color       : $quaternary
  .btn
    font-size           : $rem-font-size2
    &.active
      background-color : $tertiary !important
      color            : $white
      &:hover
        color:$white
    &:hover
      background-color : $secondary-l-39 !important
      color            : $white
.btn-default
    background-color : $white
.cv-matcherizer-container
  & .list-items
    & i:hover
    & .single-selected
      background-color:$secondary-l-96
      &-label
        display:inline-block
        border:1px solid $grey
        color: $white
        background-color: $secondary-l-84
  & ul
    border: 1px solid $grey
    & .list-group
      &-item
        background-color: $white
        &:hover
          background-color: $primary-l-96
        &.current-cursor-item
          background-color: $grey
        &.more-data-message
          color:$black-l-42
          &:hover
            background-color: $white
.q-table
  & th
    background-color : $tertiary-l-96
    font-size        : $rem-font-size2
    color            : $primary
    opacity          : 1 !important
  & tbody
    & td
      font-size   : $rem-font-size2 !important
  & tr
    &:nth-of-type(2n)
      background-color: $tertiary-l-96
.cv-orderable
  font-size   :$rem-font-size3
.simple-filters-container,.action-container
  & .q-field-icon
    font-size    : $rem-font-size3
  & .q-field-bottom
    font-size   : $rem-font-size1
.q-input-target
  color:$black-l-18
  //color   : $secondary //input color
.q-if-focused .q-if-label .q-if-addon .q-if-focused .q-if-control
  color:$tertiary

//cv grid styles
.cv-grid-container
  .b-top
    border-top:1px solid $grey
  .b-bottom
    border-bottom:1px solid $grey
.q-if-hide-underline
  border-bottom: 1px solid $quaternary-l-96

//custom quasar stepper
.q-item-section
  color: $primary
.cv-grid-container .simple-filters-container .q-if-standard.q-if-has-label
  & .q-card
    & .q-item-section
    & .q-item-label
      & .q-item-label
        color: $primary
.q-footer
  box-shadow $primary -5px -15px 20px -25px
.q-item.active, .q-item.router-link-active, .q-item:focus
  background-color:$tertiary-l-87
.q-collapsible-sub-item .relative-position
  &:hover
    background-color:$tertiary-l-84
.q-field-error
  font-size:$font-size4
//cv paginate styles
.cv-paginate
  & button
    &.active
      background-color: $grey
      color:$white
      &:hover
        color:$white
    &:hover
      color:$white
//cv simple filter styles
.cv-relator-container
  border-bottom : 1px solid $grey
  & ul
    border:1px solid $grey
    background-color:$grey-l-96
    & .list-group
      &-item
        background-color: $white
        border: 1px solid $grey-l-90
  & .related-items
    & i:hover
      color:$negative-l-36
  & .source-items
    & i:hover
      color:$positive-l-36
//cv action container styles
.action-container
  .action-label
    & hr
      border-top: 1px solid $grey
.informative-data
  & table
    color:$grey
.cv-info-table
  & th
    background-color : $quaternary-l-96
    font-size        : $rem-font-size2
    color            : $primary
  & tbody
    & td
      font-size    : $rem-font-size2 !important
  & tr
    &:nth-of-type(2n+1)
      background-color: $quaternary-l-96

.cv-adaptative-grid-index, .cv-flex-grid-index, .cv-table-grid-index
  tr
    border-bottom: 1px solid $grey
  .border-all
    border:1px solid $grey
.q-toggle
  .q-option-label
    color       : $secondary
    font-weight : 400
