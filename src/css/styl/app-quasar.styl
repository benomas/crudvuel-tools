/*
  Here you can customize app styles for stylus framework in a global way
*/
@import './app'
a
  text-decoration  : none
  background-color : transparent
  cursor           : pointer
.c
  &-pointer
    cursor:pointer !important
.o
  &-auto
    overflow: auto !important
.in-progress-cursor
  cursor: progress !important
  &:disabled
    cursor: progress !important
body
  display     : flex
  margin      : 0
  padding     : 0
  font-size   : 16px
  font-weight : 350
  font-family : 'Roboto', sans-serif
  line-height : 1.5
  & #q-app
    display : flex
    width   : 100%
    height  : 100%
.active-icon
  font-size : 20px
  cursor    : pointer !important
.in-progress-cursor
  cursor: progress !important
  &:disabled
    cursor: progress !important
.q-table
  & th
    background-color : $tertiary-l-96
    font-size        : $rem-font-size2
    font-weight      : bold
    color            : $primary
    height           : 40px
  & tbody
    & td
      font-size   : $rem-font-size2 !important
      color       : $primary-l-21
      height      : 40px
      padding     : 5px 20px
      white-space : inherit
  & tr
    &:nth-of-type(2n)
      background-color: $tertiary-l-96
.cv-orderable
  font-weight :bold
  font-size   :$rem-font-size3
  cursor      :pointer
.action-label
  text-align:left !important
.cv-field-container
  padding-left  : 5px
  padding-right : 5px
.simple-filters-container
  display:inline-block
  & label
    display       : inline-block
    margin-bottom : 5px
    font-weight   : 700
.form-control
    -moz-appearance    : textfield
    -moz-user-select   : text
    -webkit-box-shadow : inset 0 1px 1px $black
    background-color   : $white
    background-image   : none
    border             : 1px solid #ccc
    border-radius      : 4px
    box-shadow         : inset 0 1px 1px $black
    color              : $black
    cursor             : text
    display            : inline-block
    font               : -moz-field
    font-size          : $rem-font-size2
    height             : 34px
    letter-spacing     : normal
    line-height        : 1.42857143
    overflow-clip-box  : padding-box content-box
    padding            : 6px 6px
    text-align         : start
    text-indent        : 0
    text-rendering     : optimizeLegibility
    text-shadow        : none
    text-transform     : none
    word-spacing       : normal
    margin:5px 10px 5px 0
    &:focus
      border-color       : $quaternary
      outline            : 0
      -webkit-box-shadow : inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)
      box-shadow         : inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)
  select.form-control
    -moz-appearance    : menulist
  .btn
    display             : inline-block
    margin-bottom       : 0
    font-weight         : 400
    text-align          : center
    vertical-align      : middle
    -ms-touch-action    : manipulation
    touch-action        : manipulation
    cursor              : pointer
    background-image    : none
    white-space         : nowrap
    padding             : 3px 9px
    font-size           : $rem-font-size2
    line-height         : 1.6
    border-radius       : 4px
    -webkit-user-select : none
    -moz-user-select    : none
    -ms-user-select     : none
    user-select         : none
    &.active
      background-color : $tertiary !important
      color            : $white
      &:hover
        color:$white
    &:hover
      background-color : $secondary-l-39 !important
      color            : $white
.btn-default
    color            : $secondary
    background-color : $white
    border           : none !important
    height           : 2rem
    min-width        : 2rem
    padding          : 0.5rem
    border-radius    : 50% !important
    align-items      : center
    text-align       : center
    vertical-align   : middle
    font-size        : 1rem
    line-height      : 1rem
    font-weight      : 400
.cv-grid-data-container
  margin-top     : 10px
  margin-bottom  : 10px
  padding-top    : 10px
  padding-bottom : 10px
.simple-filters-container,.action-container
  & .q-field-icon
    width        : 16px
    height       : 16px
    min-width    : 16px
    font-size    : $rem-font-size3
    margin-right : 5px
    color        : $tertiary
    margin-top   : 16px
  & .q-field-bottom
    font-size   : $rem-font-size1
    padding-top : 0
    text-align  : right
.matcherizer-item
  text-decoration: underline
.q-input-target
  height  : 21px !important
  outline : 0
  color   : $secondary
.custom-action-container .action-content
  padding:0
  & .block-container
    width   : 100%
    padding : 40px 20px 0 20px
  & .block-input
    width         : 100%
    margin-top    : 25px
    margin-bottom : 25px
.q-if-focused .q-if-label .q-if-addon .q-if-focused .q-if-control
  color:$tertiary
.q-layout-header
  background-color:$primary
.informative-data
  & table
    color:#CCCCCC
.cv-info-table
  & th
    background-color : $quaternary-l-96
    font-size        : $rem-font-size2
    font-weight      : bold
    color            : $primary
    height           : 40px
  & tbody
    & td
      padding-left : 10px
      font-size    : $rem-font-size2 !important
      color        : $primary
      height       : 40px
      padding      : 5px 20px
  & tr
    &:nth-of-type(2n+1)
      background-color: $quaternary-l-96
.cv-grid-container
  & .limit-label
    // hide text if it more than N lines
    overflow      :hidden
    text-overflow :ellipsis
  & .q-item-label
    word-break: break-all
  .q-list.round-borders
    border-radius: 4px !important
.custom-q-btn-dropdown
  padding-left: 4px
.q-if-hide-underline
  border-bottom: 1px solid $quaternary-l-96

/*transition css*/
.component-fade-enter-active
  transition: opacity .6s ease
.component-fade-leave-active
  transition: opacity .3s ease
.component-fade-enter, .component-fade-leave-to
  opacity: 0
.component-fade-slow-enter-active
  transition: opacity .4s ease
.component-fade-slow-leave-active
  transition: opacity .2s ease
.component-fade-slow-enter, .component-fade-leave-to
  opacity: 0
.bounce-enter-active
  animation: bounce-in .8s
@keyframes bounce-in
  0%
    transform: scale(0)
  50%
    transform: scale(1.2)
  100%
    transform: scale(1)
.slide-fade-enter-active
  transition: all .4s ease
.slide-fade-leave-active
  transition: all .5s cubic-bezier(1.0, 0.5, 0.8, 1.0)
.slide-fade-enter, .slide-fade-leave-to
  transform : translateX(40px)
  opacity   : 0

//custom quasar stepper
.q-stepper-dot
  width  :50px
  height :50px
  & i
    font-weight:bold
  & span
    & span
      font-weight:bold
.q-field-no-input .q-field-margin
    margin-top: 23px
.cv-grid-container .simple-filters-container .q-if-standard.q-if-has-label
    padding-top: 8px
.q-item-side
    color: $primary
.q-layout-drawer-delimiter
  box-shadow:none
.q-layout-footer
  box-shadow $primary -5px -15px 20px -25px
.q-item.active, .q-item.router-link-active, .q-item:focus
  background-color:$tertiary-l-87
.q-layout-header
  & .q-toolbar
    background-image:none !important
.q-layout-footer
  & .q-toolbar-title
    display:inline
  & ul
    margin-right: 25px
    display:block
    float: right
    line-height: 21px
    list-style-image: none
    list-style-position: outside
    list-style-type: none
    margin:0
    padding:0
    text-align: right
    width: 45px
  & .copy-label
    box-sizing: border-box
    line-height: 18.9px
.q-drawer-container
  font-weight:400
.q-collapsible-sub-item .relative-position
  cursor:pointer !important
  &:hover
    background-color:$tertiary-l-84
